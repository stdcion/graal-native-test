{
  "version": 3,
  "configurePresets": [
    {
      "name": "cmake-pedantic",
      "hidden": true,
      "warnings": {
        "dev": true,
        "deprecated": true,
        "uninitialized": true,
        "unusedCli": true,
        "systemVars": false
      },
      "errors": {
        "dev": true,
        "deprecated": true
      }
    },
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "OFF"
      }
    },
    {
      "name": "language-std",
      "hidden": true,
      "description": "This preset makes sure the project actually builds with at least the specified standard",
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "11",
        "CMAKE_C_STANDARD": "11",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF"
      }
    },
    {
      "name": "paths",
      "hidden": true
    },
    {
      "name": "flags-win-vs",
      "hidden": true,
      "description": "Note that all the flags after /W4 are required for MSVC to conform to the language standard",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/utf-8 /W4 /volatile:iso /EHsc /Zc:throwingNew"
      }
    },
    {
      "name": "config-win-vs",
      "description": "Common preset for Windows and Visual Studio.",
      "inherits": [
        "language-std",
        "paths",
        "flags-win-vs"
      ],
      "cacheVariables": {
        "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS": "ON"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        }
      }
    },
    {
      "name": "config-linux",
      "description": "Common preset for Linux.",
      "inherits": [
        "language-std",
        "paths"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "build-win-vs",
      "configurePreset": "config-win-vs"
    },
    {
      "name": "build-linux",
      "configurePreset": "config-linux"
    }
  ]
}
